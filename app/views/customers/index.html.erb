<p id="notice"><%= notice %></p>
<br>
<br>
<div class="container">
<h1>Customers</h1>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th class="table-dark">#</th>
      <th class="table-dark">Name</th>
      <th class="table-dark">Email</th>
      <th class="table-dark">City</th>
      <th class="table-dark">Company</th>
      <th class="table-dark" colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.city %></td>
        <td><%= customer.company %></td>
        <td class="text-center"><%= link_to 'Show', customer, class:"btn-sm btn-info text-white text-decoration-none" %></td>
        <td class="text-center"><%= link_to 'Edit', edit_customer_path(customer), class:"btn-sm btn-warning text-white text-decoration-none" %></td>
        <td class="text-center"><%= link_to "Delete", destroy_customer_path(id: customer.id), class:"btn-sm btn-danger text-decoration-none" %> </td>
        </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to 'New Customer', new_customer_path, class:"btn-sm btn-primary text-white text-decoration-none" %>
</div>
<div class="d-flex justify-content-center mt-2 ">
  <%= will_paginate @customers, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>

