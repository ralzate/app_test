                <tr>
                  <th><%= link_to 'Edit', edit_customer_path(@customer), class:"btn btn-success text-white text-decoration-none" %></th>
                  <th><%= link_to 'Back', customers_path, class:"btn btn-secondary text-white text-decoration-none" %></th>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div> 
    </div> 
  </div>
